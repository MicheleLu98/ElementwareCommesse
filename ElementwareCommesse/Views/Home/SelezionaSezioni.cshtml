@model ElementwareCommesse.Models.SezioniModel

@{
    ViewBag.Title = "SelezionaSezioni";
}

<h2>SelezionaSezioni</h2>

@using (Html.BeginForm())
{
    <table>
        @for(int i = 0;i < Model.SEZs.Count; i++)
        {
        <tr>
            <td>
                @Html.CheckBoxFor(model => model.SEZs[i].IsChecked)
                <label>@Model.SEZs[i].NomeSezione</label>
                @Html.HiddenFor(model => model.SEZs[i].IDSez)
                @Html.HiddenFor(model => model.SEZs[i].NomeSezione)
                @Html.HiddenFor(model => model.SEZs[i].SottoTab)
            </td>
        </tr>
        }
    </table>

    <input  type="submit" value="Submit"/>
}